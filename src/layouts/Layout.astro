--- 
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="id" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="max-w-3xl mx-auto p-4 bg-stone-100 grid grid-rows-[1fr_auto] min-h-full gap-8">
		<div class="grid content-stretch gap-4">
			<slot />
		</div>
		<footer>
			<p class="text-xs text-center">Made simple.</p>
		</footer>
	</body>
</html>
