---
interface Props {
	username: string;
	share?: string;
}

const { username, share } = Astro.props;

import Share from '../svg/share-04-svgrepo-com.svg'
import Copy from '../svg/copy-06-svgrepo-com.svg'
---
<a href={share ? share : "#"} onclick={share ? '' : `navigator.clipboard.writeText('${username}')`}>
	<div class="flex gap-4 items-center p-4 border border-gray-300 rounded-lg shadow-md bg-white">
		<slot name="before" />
		<div class="flex-1">
			<p class="font-medium">{username}</p>
		</div>
		{share ? <Share slot="after" size={24} /> : <Copy slot="after" size={24} />}
	</div>
</a>